    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: demo.py with args",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/demo.py",
            "args": [
                "--batch_size=48",
                "--side_view",
                "--save_mesh",
                "--full_frame",
                "--vert_viz",
            ],
            "console": "integratedTerminal",
            "env": {
                "CONDA_DEFAULT_ENV": "hamer"
            },
            "python": "/home/fai/miniconda3/envs/hamer/bin/python"
        }
    ]
}
